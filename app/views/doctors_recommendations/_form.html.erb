<% if user_signed_in? && current_user.role == 'doctor' %>
  <% if @recommendation.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= t('common.errors') %></h5>
      <ul>
        <% @recommendation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for [@appointment, @recommendation], html: {multipart: true} do |form| %>
    <div class="form">
      <h3> Write your recommendation </h3>

      <div class="form-group">
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name%>
      </div>

      <div class="form-group">
        <%= form.label :description, style: "display: block" %>
        <%= form.text_field :description%>
      </div>

      <div class="actions">
        <%= form.submit 'Save', class: 'btn btn-primary'%>
      </div>
    </div>
  <% end %>
<% end %>