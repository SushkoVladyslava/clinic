<h2> Information about doctor</h2>
<table id="tables" >
  <tr>
    <th> Base Information</th>
    <th> Category </th>
    <th> Years of work</th>
    <th> Price </th>
    <th> Description: </th>
    <th> Avatar: </th>
  </tr>
  <tr>
    <td> <%= @doctor.first_name %>, <%= @doctor.last_name %> <%= @doctor.city %> ,<%= @doctor.sex %></td>
    <td> <%= DoctorsCategory.find(@doctor.doctors_category_id).name %></td>
    <td> <%= @doctor.years_of_work %></td>
    <td> <%= @doctor.price %></td>
    <td> <%= @doctor.description %></td>
    <td> <%= image_tag @doctor.avatar.variant(resize: "100x100!"), class: 'img-thumbnail thumb' if @doctor.avatar.present? %> </td>
  </tr>
</table>

