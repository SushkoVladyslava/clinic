<!DOCTYPE html>
<html>
<head>
  <title>Clinic</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <li class="nav-item active">
      <%= link_to "Home", main_page_path %>
    </li>
    <% if user_signed_in? %>
      <li class="nav-item active">
        <%= link_to "My profile", edit_user_registration_path %>
      </li>
      <% if current_user.role == 'patient'%>
      <li class="nav-item active">
        <%= link_to "My appointments", appointments_path %>
      </li>
      <li class="nav-item active">
        <%= link_to "Doctors", doctors_path %>
      </li>
      <li class="nav-item active">
        <%= link_to "Make an appointments", new_appointment_path %>
      </li>
      <% else %>
        <li class="nav-item active">
          <%= link_to "Patients for appointment", appointments_path %>
        </li>
      <% end %>
    <% end %>
    <ul class="navbar-nav pull-xs-right">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Log In", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Registration", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </nav>
</div>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<%= yield %>
</body>
</html>
